{
  "name": "nodejs-demo-component",
  "version": "0.1.0",
  "description": "The base component files",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "mkdir -p .build",
    "build-js": "browserify src/main.js -o .build/main.js",
    "build-sass": "node-sass src/sass/main.scss .build/main.css",
    "build-min-js": "browserify src/main.js | uglifyjs -o .build/main.min.js",
    "build-min-sass": "node-sass src/sass/main.scss | cleancss -o .build/main.min.css",
    "watch-js": "nodemon -e js -w src -x 'npm run build-js'",
    "watch-sass": "nodemon -e scss -w src/sass -x 'npm run build-sass'",
    "build": "npm run build-js & npm run build-sass",
    "watch": "npm run watch-js & npm run watch-sass"
  },
  "repository": {
    "type": "git",
    "url": "git@github.rtp.raleigh.ibm.com:people-insights-commons/nodejs-demo-component.git"
  },
  "keywords": [
    "people",
    "insights",
    "base",
    "nodejs",
    "demo",
    "component"
  ],
  "author": "Ary Pablo Batista <batarypa@ar.ibm.com>",
  "license": "Apache License Version 2.0",
  "dependencies": {
    "async": "^0.9.0",
    "babelify": "^5.0.4",
    "body-parser": "^1.9.0",
    "colors": "^1.0.2",
    "cors": "^2.4.2",
    "envify": "^3.4.0",
    "express": "^4.9.5",
    "method-override": "^2.2.0",
    "moment": "^2.8.3",
    "morgan": "^1.3.2",
    "node-logentries": "^0.1.4",
    "react": "^0.13.1",
    "respawn": "^1.0.1"
  },
  "devDependencies": {
    "browserify": "^9.0.7",
    "clean-css": "^3.1.9",
    "node-sass": "^2.1.1",
    "uglifyjs": "^2.4.10"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  }
}
